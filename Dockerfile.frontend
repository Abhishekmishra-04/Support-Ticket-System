# Dockerfile for React Frontend
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm install

# Copy source
COPY . .

# Expose port (Vite default)
EXPOSE 5173

# Run dev server (using --host to allow external access in Docker)
CMD ["npm", "run", "dev", "--", "--host"]
